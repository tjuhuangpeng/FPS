<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.learning.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/image_rotate" />

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#999999"
        android:layout_below="@id/image_rotate"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/image_rotates"
        android:layout_below="@+id/line"
        android:background="#ffffff"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btn1_rotate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_rotates"
        android:text="0为水平反转"/>

    <Button
        android:id="@+id/btn1_rotate2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn1_rotate"
        android:text="1为垂直反转"/>
    <Button
        android:id="@+id/btn1_rotate3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn1_rotate2"
        android:text="非0非1"/>

</RelativeLayout>
